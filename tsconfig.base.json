{
    "compilerOptions": {
        "target": "ES2022",
        "jsx": "react",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ES2023", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["libs/shared/src/*"],
            "@spotify-web-api/*": ["libs/spotify-web-api/src/*"]
        }
    }
}
